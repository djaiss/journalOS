{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "djaiss/journalos",
  "type": "project",
  "description": "Serious journaling for everyone.",
  "keywords": [
    "laravel",
    "framework",
    "blade"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "amirami/localizator": "^0.14.0@alpha",
    "bacon/bacon-qr-code": "^3.0",
    "cesargb/laravel-magiclink": "^2.24",
    "codeat3/blade-phosphor-icons": "^2.3",
    "erag/laravel-disposable-email": "^3.5",
    "jenssegers/agent": "^2.6",
    "laravel/framework": "^12.0",
    "laravel/nightwatch": "^1.21",
    "laravel/octane": "^2.13",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.10.1",
    "pragmarx/google2fa-laravel": "^2.3",
    "resend/resend-laravel": "^1.0.0",
    "njoguamos/laravel-turnstile": "^3.0",
    "spatie/laravel-login-link": "^1.6",
    "spatie/laravel-sitemap": "^7.3",
    "stevebauman/purify": "^6.3",
    "tonysm/rich-text-laravel": "^3.4"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^4.0",
    "brianium/paratest": "^7.8",
    "driftingly/rector-laravel": "^2.1",
    "fakerphp/faker": "^1.23",
    "larastan/larastan": "^3.3",
    "laravel/boost": "^2.0",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.18",
    "laravel/sail": "^1.41",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "phpunit/phpunit": "^11.0",
    "rector/rector": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    },
    "files": [
      "app/Helpers/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "bunx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
    ],
    "journalos:lint": "mago fmt",
    "journalos:locale": "php artisan localize en,fr --remove-missing",
    "journalos:marketing": "php artisan marketing:extract-timestamps && php artisan marketing:generate-sitemap",
    "journalos:prettier": "npx prettier --write resources/",
    "journalos:rector": "./vendor/bin/rector",
    "journalos:setup": "php artisan migrate:fresh && php artisan db:seed",
    "journalos:static": "./vendor/bin/phpstan analyse --memory-limit=256M",
    "journalos:unit": "rm -f database/test.sqlite_test* && php artisan migrate:fresh --database=testing && php artisan test --parallel",
    "journalos:update": "composer update && bun update",
    "journalos:update-blacklist-domains": "php artisan erag:sync-disposable-email-list",
    "precommit": [
      "@journalos:rector",
      "@test",
      "@journalos:static",
      "@journalos:update-blacklist-domains",
      "@journalos:prettier",
      "@journalos:update",
      "@journalos:locale",
      "@journalos:lint",
      "@journalos:setup",
      "@journalos:marketing"
    ],
    "clean": [
      "@journalos:prettier",
      "@journalos:locale",
      "@journalos:lint",
      "@journalos:marketing"
    ],
    "test": [
      "@journalos:unit",
      "@journalos:setup",
      "@journalos:locale",
      "@journalos:lint"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "version": "0.6.0"
}
